@model IEnumerable<Waiterly.Models.Restaurant>



<h1>Restaurants</h1>
@{
    if (User.Identity.IsAuthenticated)
    {

        if (User.IsInRole("Admin") || User.IsInRole("Manager"))
        {
            <p>
                <a asp-action="Create">Add Restaurant</a>
            </p>
        }
    }
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @{
                        if (User.Identity.IsAuthenticated)
                        {

                            if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                            {
                                <p>
                                    <a asp-action="Edit" asp-route-id="@item.Id"><button type="button" class="btn btn-info">Edit</button></a>

                                    <a asp-controller="Delete" asp-route-id="@item.Id">
                                        <button type="button" class="btn btn-danger">Delete</button>
                                    </a>
                                    <a asp-controller="UserTables" asp-action="Index" asp-route-restaurantId="@item.Id">
                                        <button type="button" class="btn btn-primary">Manage</button>
                                    </a>
                                </p>

                            }
                        }
                    }
                    @{
                        if (User.Identity.IsAuthenticated)
                        {

                            if (User.IsInRole("Host") || User.IsInRole("Waiter"))
                            {
                                <p>
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                                </p>
                            }
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
